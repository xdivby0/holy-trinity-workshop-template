{
	"name": "template-for-workshop",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"types": "wrangler types",
		"deploy": "npm run build && wrangler deploy",
		"dev": "react-router dev",
		"postinstall": "npm run cf-typegen",
		"preview": "npm run build && vite preview",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
		"migration:initial": "npx prisma migrate diff --from-empty --to-schema prisma/schema.prisma --script > prisma/migrations/0001_init.sql",
		"migration:create": "npx prisma migrate diff --from-local-d1 --to-schema prisma/schema.prisma --script > prisma/migrations/0001_init.sql",
		"migration:apply:local": "npx wrangler d1 execute DB --local",
		"migration:apply:remote": "npx wrangler d1 execute DB --remote"
	},
	"dependencies": {
		"@prisma/adapter-d1": "^7.4.0",
		"@prisma/client": "^7.4.0",
		"dotenv": "^17.3.1",
		"isbot": "^5.1.31",
		"prisma": "^7.4.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router": "^7.10.0"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.13.5",
		"@react-router/dev": "^7.10.0",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22.19.11",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.66.0"
	}
}
